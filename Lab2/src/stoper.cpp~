#include "stoper.hh"
#include <iostream>
#include <time.h>

using namespace std;

void stoper::Wlacz(){
start=clock();
}

void stoper::Wylacz(){
stop=clock();
}

void stoper::Czas_trwania(){
trwanie=(double)(stop-start)/CLOCKS_PER_SEC;
cout<<"Czas trwania:"<<trwanie<<endl;
}

void stoper::Wyzeruj_stoper(){
start=0;
stop=0;
trwanie=0;}
